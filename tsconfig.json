{
  "compilerOptions": {
    /* Language & environment */
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],

    /* Vue + Vite */
    "jsx": "preserve",
    "isolatedModules": true,
    "noEmit": true,

    /* Strictness (safe but not annoying) */
    "strict": true,

    /* Paths & aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },

    /* Types */
    "types": ["vite/client"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"],
}
